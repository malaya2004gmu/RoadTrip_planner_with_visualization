<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Locations</title>
    <link rel="stylesheet" href="/styles.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
  </head>
  <body>
    <div class="container">
      <h1>Locations</h1>

      <form action="/locations" method="POST" class="main-form">
        <div class="form-group">
          <input
            type="text"
            name="name"
            placeholder="Enter city name"
            required
            class="input-field"
          />
        </div>
        <button type="submit" class="submit-button">Add Location</button>
      </form>

      <ul class="locations-list">
        <% locations.forEach(loc => { %>
        <li class="location-item">
          <span class="location-name"><%= loc.name %></span>
          <form action="/locations/delete" method="POST" class="">
            <input type="hidden" name="name" value="<%= loc.name %>" />
            <button type="submit" class="delete-button" title="Delete Location">
              <i class="fas fa-trash-alt"></i>
            </button>
          </form>
        </li>

        <% }) %>
      </ul>

      <div class="back-link">
        <a href="/" class="back-button">Back to Home</a>
      </div>
    </div>
  </body>
</html>
