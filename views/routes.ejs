<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Routes</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <h1>Routes</h1>

        <form action="/routes" method="POST" class="bg-white p-6 rounded shadow-md">
            <div class="mb-4">
                <label for="from-select" class="block text-sm font-medium text-gray-700">From</label>
                <select name="from" id="from-select" required class="dropdown w-full mt-1 p-2 border border-gray-300 rounded">
                    <% locations.forEach(loc => { %>
                        <option value="<%= loc %>"><%= loc %></option>
                    <% }) %>
                </select>
            </div>
            
            <div class="mb-4">
                <label for="to-select" class="block text-sm font-medium text-gray-700">To</label>
                <select name="to" id="to-select" required class="dropdown w-full mt-1 p-2 border border-gray-300 rounded">
                    <% locations.forEach(loc => { %>
                        <option value="<%= loc %>"><%= loc %></option>
                    <% }) %>
                </select>
            </div>

            <div class="mb-4">
                <label for="distance" class="block text-sm font-medium text-gray-700">Distance (km)</label>
                <input 
                    type="number" 
                    name="distance" 
                    id="distance-input" 
                    placeholder="Distance (km)" 
                    required 
                    class="distance-input w-full mt-1 p-2 border border-gray-300 rounded"
                >
            </div>

            <button type="submit" class="w-full bg-green-500 text-white py-2 px-4 rounded hover:bg-green-600">
                Add Route
            </button>
        </form>

        <ul class="mt-6 bg-white p-4 rounded shadow-md">
            <% routes.forEach(route => { %>
                <li class="card"><%= route.from %> â†’ <%= route.to %> : <%= route.distance %> km</li>
            <% }) %>
        </ul>

        <div class="mt-15 text-center">
           <a href="/" >Back to Home</a>
        </div>
    </div>
</body>
</html>